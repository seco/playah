{
  "name": "playah",
  "version": "0.0.1",
  "description": "Helps draw video on canvas",
  "keywords": [
    "video",
    "html5",
    "canvas"
  ],
  "main": "index.js",
  "homepage": "https://github.com/thewhodidthis/playah#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thewhodidthis/playah.git"
  },
  "bugs": {
    "url": "https://github.com/thewhodidthis/playah/issues"
  },
  "config": {
    "jscsrc": ".jscsrc"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "clear": "npm run clear:dist && npm run clear:logs",
    "clear:dist": "rm -rf dist/",
    "clear:logs": "rm -f *.log",
    "lint": "(jshint index.js & jscs index.js --reporter=inlinesingle) 2>&1 | tee lint-js.log",
    "postlint": "find lint-js.log -size 0 -print0 | xargs -0 rm",
    "start": "npm run watch",
    "serve": "php -S localhost:8000",
    "watch": "nodemon -e js -w index.js -x 'npm run build'",
    "example": "npm run build",
    "prebuild": "mkdir -p dist/",
    "build": "browserify index.js -s playah -o ./dist/playah.js",
    "build:min": "browserify index.js -s playah | uglifyjs -mc -o ./dist/playah.min.js",
    "build:demo": "cp ./dist/playah.min.js ./example/playah.js",
    "postbuild": "npm run build:min && npm run build:demo",
    "preversion": "npm run clear:logs"
  },
  "engines": {
    "node": ">=4.2.4",
    "npm": ">=3.5.3"
  },
  "devDependencies": {
    "jscs": "latest",
    "jshint": "latest",
    "uglify-js": "latest",
    "browserify": "latest",
    "nodemon": "latest"
  },
  "author": "sChzs BkgNns <sotirios.bakagiannis@gmail.com> (https://www.thewhodidthis.com)",
  "license": "MIT"
}
